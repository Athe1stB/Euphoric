<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background = "@color/white"
    android:padding="20dp" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/homescreen_logo_only" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Euphoric"
        android:fontFamily="@font/dancing_script"
        android:textColor="@color/lavender"
        android:textSize="50sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/fullName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        android:drawableLeft = "@drawable/name"
        android:gravity="center_vertical"
        android:hint="@string/fullName"
        android:inputType="textCapWords"
        android:minHeight="48dp"
        android:padding="10dp"
        android:singleLine="true"
        android:fontFamily="@font/arvo"
        android:textColor="@color/lavender"
        android:textColorHint="@color/light_lavender"
        android:textSize="16sp" />

<!--    <View-->
<!--        android:layout_width="fill_parent"-->
<!--        android:layout_height="1px"-->
<!--        android:background="@color/white_greyish" />-->

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/userEmailId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        android:drawableLeft = "@drawable/email"
        android:gravity="center_vertical"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="10dp"
        android:singleLine="true"
        android:fontFamily="@font/arvo"
        android:textColor="@color/lavender"
        android:textColorHint="@color/light_lavender"
        android:textSize="16sp" />

<!--    <View-->
<!--        android:layout_width="fill_parent"-->
<!--        android:layout_height="1px"-->
<!--        android:background="@color/white_greyish" />-->

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/mobileNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        android:drawableLeft = "@drawable/phone"
        android:gravity="center_vertical"
        android:hint="@string/mobileNumber"
        android:inputType="phone"
        android:minHeight="48dp"
        android:padding="10dp"
        android:singleLine="true"
        android:fontFamily="@font/arvo"
        android:textColor="@color/lavender"
        android:textColorHint="@color/light_lavender"
        android:textSize="16sp" />

<!--    <View-->
<!--        android:layout_width="fill_parent"-->
<!--        android:layout_height="1px"-->
<!--        android:background="@color/white_greyish" />-->

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        android:drawableLeft = "@drawable/lock"
        android:gravity="center_vertical"
        android:hint="@string/passowrd"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="10dp"
        android:singleLine="true"
        android:fontFamily="@font/arvo"
        android:textColor="@color/lavender"
        android:textColorHint="@color/light_lavender"
        android:textSize="16sp" />

<!--    <View-->
<!--        android:layout_width="fill_parent"-->
<!--        android:layout_height="1px"-->
<!--        android:background="@color/white_greyish" />-->

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/confirmPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        android:drawableLeft = "@drawable/key"
        android:gravity="center_vertical"
        android:hint="@string/confirmPassword"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="10dp"
        android:singleLine="true"
        android:fontFamily="@font/arvo"
        android:textColor="@color/lavender"
        android:textColorHint="@color/light_lavender"
        android:textSize="16sp" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/home_card"
        android:padding="3dp"
        android:fontFamily="@font/cabin"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="SignUp">SignUp</Button>

    <Button
        android:id="@+id/redirectLoginButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/home_card"
        android:padding="3dp"
        android:fontFamily="@font/cabin"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="Have an account? Log In">SignIn</Button>

</LinearLayout>
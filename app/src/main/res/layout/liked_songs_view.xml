<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/song_thumbnail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="4px" />

    <LinearLayout
        android:id="@+id/song_ll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="6sp"
        android:layout_toStartOf="@id/song_like"
        android:layout_toEndOf="@id/song_thumbnail"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Song Name"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/song_artist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Song Artist"
            android:textColor="@color/grey" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/song_like"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="#ffffff"
        android:src="@drawable/like_border"
        android:layout_toStartOf="@id/song_play" />

    <ImageButton
        android:id="@+id/song_play"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="#ffffff"
        android:src="@drawable/play"
        android:layout_toStartOf="@id/song_details" />
    <ImageButton
        android:id="@+id/song_details"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="#ffffff"
        android:src="@drawable/more"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
